@model comicbook.Models.comicbook

@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    ViewBag.ShowBack = true;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div>
        <h2>The Amazing Spider-Man #700</h2>

        <div class="row">
            <div class="col-md-6">
                <div class="well">
                    <h5><label>Series Title:</label>@Model.Title</h5>
                    <h5><label>Issue :</label> @Model.IssueNumber</h5>
                    <h5><label>Favorite:</label>@Model.getCoverImageName</h5>
                    <h5>Artists:</h5>
                    <div>
                        <ul>
                            @foreach (var Artist in Model.Artists)
                            {
                                <li>@Artist.Role  = @Artist.Name</li>
                            }
                        </ul>
                    </div>
                </div>
                <h5>Description</h5>
                @Html.Raw(Model.Description)
            </div>
            <div class="col-md-6">
                <img src="/Images/@Model.getCoverImageName"
                     alt="@Model.DisplayText" class="img-responsive" />
            </div>
        </div>
    </div>
</body>
</html>
